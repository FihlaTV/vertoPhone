{
  "manifest_version": 2,
  "name"            : "Verto SofthPhone Extension",
  "description"     : "FreeSWITCH verto phone extension.",
  "short_name"      : "vertoSoftPhoneApp",
  "version"         : "0.1",
  "author"          : "navrotskyj@gmail.com",
  "minimum_chrome_version": "23",
  "icons": {
    "16": "images/call64.png",
    "24": "images/call64.png",
    "48": "images/call64.png",
    "64": "images/call64.png",
    "124": "images/call64.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "storage",
    "background",
    "<all_urls>",
    "management"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-1.10.2.min.js", "lib/CTITelephony/ContentPage.js"]
    }
  ],
  "background": {
    "scripts": [
      "lib/CTITelephony/Process.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "images/call64.png",
    "default_popup": "popup.html"
  }
}
